{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Hardhat test",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/.bin/hardhat",
            "args": [
                "test"
            ],
            "outFiles": [
                "${workspaceFolder}/artifacts/**/*.json"
            ],
            "preLaunchTask": "TypeScript Compiler",
            "sourceMaps": true,
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}